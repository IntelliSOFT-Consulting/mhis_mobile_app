<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    tools:context=".ui.components.registration.RegistrationFragment" >

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textFontWeight="600"
            android:text="Enter details" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/patientId" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/patientId" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/firstName" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstName" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/lastName" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/dob" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:inputType="none"
            android:focusable="false"
            android:id="@+id/dob" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/age" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/age" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/homeAddress" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeAddress" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/phoneNumber" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/phoneNumber" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/alternateContact" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/firstName" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alternateFirstName" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/lastName" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alternateLastName" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questionLabelStyle"
            android:text="@string/alternateContactPhone" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/alternateContactPhone" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerPatient"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/save"
            />
    </LinearLayout>

</ScrollView>